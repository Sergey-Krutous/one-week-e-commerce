<% @header = "Category ##{@category.id}" %>

<h3><%= admin_breadcrumb @category %></h3>

<table class="table">
  <tbody>
    <tr>
      <th scope="row">Title</th>
      <td><%= @category.title %></td>
    </tr>
    <tr>
      <th scope="row">URL slug</th>
      <td><%= @category.slug %></td>
    </tr>
  </tbody>
</table>

<%= admin_link_to_edit @category %>
<%= admin_link_to_siblings_of @category %>

