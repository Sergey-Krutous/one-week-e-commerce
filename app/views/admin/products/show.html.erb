<% @header = "Product ##{@product.id}" %>

<table class="table">
  <tbody>
    <tr>
      <th scope="row">Title</th>
      <td><%= @product.title %></td>
    </tr>
    <tr>
      <th scope="row">URL slug</th>
      <td><%= @product.slug %></td>
    </tr>
    <tr>
      <th scope="row">Description</th>
      <td><%= @product.description %></td>
    </tr>
    <tr>
      <th scope="row">Price</th>
      <td><%= @product.price %></td>
    </tr>
    <tr>
      <th scope="row">Stock quantity</th>
      <td><%= @product.quantity %></td>
    </tr>
    <tr>
      <th scope="row">Categories</th>
      <td>
        <% @product.categories.each do |category| %>
        <%= admin_breadcrumb category %><br/>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">Images</th>
      <td>
        <div class="row">
          <% @product.images.each do |image| %>
            <div style="width:100px;height:100px;float:left;margin:10px">
              <%= image_tag image.file_url.to_s, {style: "max-height:100%;max-width:100%"} if image.file_url.present? %>
            </div>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>

<%= admin_link_to_edit @product %>
<%= admin_link_to_index_of "product" %>
<%= admin_link_to_images_of @product %>