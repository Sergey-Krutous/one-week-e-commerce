<div class="form-group">
  <%= f.label(:title, class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= f.text_field(:title, class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <%= f.label("URL slug", class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= f.text_field(:slug, class: 'form-control') %>
  </div>
</div>
  <div class="form-group">
  <%= f.label(:description, class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= f.text_field(:description, class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <%= f.label(:price, class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= f.text_field(:price, class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <%= f.label("Stock quantity", class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= f.text_field(:quantity, class: 'form-control') %>
  </div>
</div>
<div class="form-group">
  <%= f.label("Categories", class: "col-md-2 control-label") %>
  <div class="col-md-3">
    <%= select_tag 'product[category_ids][]', options_from_collection_for_select(Category.order(:lft), "id", "indent_title", @product.categories.collect{|c| c.id}), { multiple: true, class: 'form-control' } %>
